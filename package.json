{
  "name": "graphie",
  "version": "1.0.0",
  "description": "graphql server in front of grpc",
  "main": "server.js",
  "scripts": {
    "start": "npm run build-ts && npm run serve",
    "serve": "node dist/server.js",
    "watch": "tsc-watch --onSuccess 'node dist/server.js'",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "gen-proto": "./node_modules/@grpc/proto-loader/build/bin/proto-loader-gen-types.js --longs=Number --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=./app/proto/ ./proto/*.proto"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.4.5",
    "@grpc/proto-loader": "^0.6.7",
    "@types/ramda": "^0.27.60",
    "apollo-server": "^3.5.0",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "class-validator": "^0.13.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "graphql": "^15.8.0",
    "ramda": "^0.27.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.1",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.6.0"
  }
}
